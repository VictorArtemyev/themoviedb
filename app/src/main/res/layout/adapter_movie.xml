<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:padding="5dp" >

    <ImageView
        android:id="@+id/iv_poster_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:maxHeight="70dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:contentDescription="poster image"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/iv_poster_image"
        android:text="Interstellar"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_release_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_poster_image"
        android:layout_toRightOf="@+id/iv_poster_image"
        android:layout_marginLeft="5dp"
        android:lines="1"
        android:gravity="bottom"
        android:text="Release Date:"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_poster_image"
        android:layout_toRightOf="@+id/tv_release_date"
        android:layout_marginLeft="5dp"
        android:lines="1"
        android:gravity="bottom"
        android:text="1987-12-27"
        android:textSize="12dp" />

    <ImageView
        android:id="@+id/iv_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_title"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="1dp"
        android:maxHeight="15dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:contentDescription="star image"
        android:src="@drawable/ic_star" />

    <TextView
        android:id="@+id/tv_vote_average"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_star"
        android:layout_marginLeft="5dp"
        android:layout_alignBottom="@+id/iv_star"
        android:text="8.3 (463 votes)"
        android:textSize="10dp" />

</RelativeLayout>